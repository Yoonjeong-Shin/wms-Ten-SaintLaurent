    <insert id="insertGbgDetail" useGeneratedKeys="true" keyProperty="gbgDetailPk">
        insert into
            gbg_detail_tb
        values (
            null, #{itemPk}, #{itemState}, #{gbgSerialNum}
        )
    </insert>

    <delete id="deleteDetailItem">
        delete from
            item_detail_tb
        where
            item_detail_pk = #{itemDetailPk}
    </delete>
